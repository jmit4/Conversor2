<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Conversor2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#30396C</item>
        <item name="colorPrimaryVariant">#6886B1</item>
        <item name="colorOnPrimary">#EFF3F4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4F938C</item>
        <item name="colorSecondaryVariant">#345555</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#115480</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Conversor2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Conversor2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Conversor2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
